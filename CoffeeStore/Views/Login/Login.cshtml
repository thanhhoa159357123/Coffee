@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Đường dẫn tới layout chung
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h3 style="padding-bottom:20px"> Chào mừng bạn đến với Chill Coffee... </h3>
            <div class="card">
                <div class="card-header" style="background-color:antiquewhite">Hãy đăng nhập nhé !</div>
                <div class="card-body" style="background-color:blanchedalmond">
                    <!-- Hiển thị thông báo lỗi nếu có -->
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    <form id="loginForm" action="@Url.Action("Login", "Login")" method="post">
                        <div class="mb-3">
                            <label for="phoneNumber" class="form-label">Số điện thoại:</label>
                            <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Nhập số điện thoại" required>
                        </div>
                        <button type="submit" class="text-light btn btn-primary" style="border:0px;background-color:brown">Đăng nhập</button>
                    </form>
                    <div class="mt-3">
                        <p>Nếu chưa có tài khoản, hãy <a asp-controller="Login" asp-action="SignUp" style="color:coral">đăng ký</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
